<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/login_background"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/mainactivity_infortip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_infor"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/com.larry.cloundusb.mainactivity.drawer.portrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/default_portrait"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <Button android:id="@+id/mainactivity_login_btn"
        android:layout_width="wrap_content"
        android:text="@string/login"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:onClick="loginClick"
        android:background="@drawable/corner_button_shape"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/com.larry.cloundusb.mainactivity.drawer.nametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="larrysea"
        android:gravity="center"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />




</LinearLayout>
