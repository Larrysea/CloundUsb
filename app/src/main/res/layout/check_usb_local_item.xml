<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:onClick="check_local_item"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView android:id="@+id/check_usb_imageview"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@mipmap/local_file"
        android:layout_alignParentLeft="true"
        />

    <TextView android:id="@+id/check_usb_name_textview"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:text="@string/local_file"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/check_usb_imageview"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>


    <TextView android:id="@+id/check_usb_document_size_textview"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"

        android:textColor="@color/black"
        android:layout_below="@+id/check_usb_name_textview"
        android:layout_toRightOf="@+id/check_usb_imageview"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>



    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/content_category_file_arrow_icon"/>

</RelativeLayout>